<h1>Update Song</h1>

<h2>Song Name: <%= @song.name %></h2>

<form action="/songs/<%= @song.slug %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <br>
    <p>Select an existing Artist or create a new one below</p>

    <h3>Existing Artists</h3>
    <% @artists.each do |artist| %>
        <input type="checkbox" name="artists[]" id="<%= artist.id %>" value="<%= artist.id %>" <%= 'checked' if @song.artist_id == artist.id %>><%= artist.name %></input>
    <% end %>
    <br>

    <h3>New Artist</h3>
    <label>Artist Name:</label>
    <br>
    <input type="text" name="Artist Name" id="artist_name"></input>
    <br><br>

    <p>Select an existing Genre or create a new one below</p>

    <h3>Existing Genres</h3>
    <% @genres.each do |genre| %>
        <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%= 'checked' if @song_genre.genre_id == genre.id %>><%= genre.name %></input>
    <% end %>
    <br>

    <h3>New Genre</h3>
    <label>Genre Name:</label>
    <br>
    <input type="text" name="Genre Name" id="genre_name"></input>
    <br><br>

    <input type="submit" value="Save">
</form>